<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:focusable="true"
    android:clickable="true"
    tools:context="com.example.delya.loginfragmentswork.SwitcherFragment">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/button_switch_to_call_fragment"
            style="@style/button"
            android:layout_width="@dimen/button_large_width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/action_call" />

        <Button
            android:id="@+id/button_switch_to_sms_fragment"
            style="@style/button"
            android:layout_width="@dimen/button_large_width"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_switch_to_call_fragment"
            android:layout_marginLeft="20dp"
            android:text="@string/action_send_sms" />
    </RelativeLayout>


</RelativeLayout>
